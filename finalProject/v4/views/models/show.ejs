<% include ../partials/header.ejs %>

<div class="container">
  <h1><%= model.title %></h1>
  <img src="<%= model.image %>" alt="" style="width: 100%;">
  <p>Artist: <%= model.author.username %></p>
  <p><%= model.description %></p>
  
  <% if(currentUser && model.author.id.equals(currentUser._id)) { %>
    <p><a href="/models/<%= model._id %>/edit" class="btn btn-secondary">Edit</a></p>
    <form action="/models/<%= model._id %>?_method=DELETE" method="POST">
      <button class="btn btn-danger">Delete</button>
    </form>
  <% } %>

  <p><a href="/models/<%= model._id %>/comments/new" class="btn btn-primary">Add New Comment</a></p>
  <% model.comments.forEach(function(comment) { %>
    <p><%= comment.text %> - <strong><%= comment.author.username %></strong></p>
  <% }); %>

  <p><a href="/models">Go Back</a></p>
</div>

<% include ../partials/footer.ejs %>