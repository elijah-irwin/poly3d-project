<% include ../partials/header.ejs %>
<div class="container">
  <h1 style="text-align: center; padding: 20px;">
    Add New Comment to <%= model.title %>
  </h1>
  <div class="row">
    <div style="margin: 0 auto; width:50%">

      <form action="/models/<%= model._id %>/comments" method="post">
        <div class="form-group">
          <input type="text" name="comment[text]" placeholder="comment"
          class="form-control">
        </div>

        <div class="form-group">
          <input type="text" name="comment[author]" placeholder="user" 
          class="form-control">
        </div>

        <button type="submit" class="btn btn-primary btn-block"
        style="margin-bottom:5px;">Submit</button>
      </form>

      <a href="/models/<%= model._id %>">Go back</a>

    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>