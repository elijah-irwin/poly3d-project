<% include partials/header.ejs %>

<div class="container">
  <header class="jumbotron" style="margin-top:30px;">
    <div class="container">
      <h1>Models Page</h1>
      <a href="/models/new">Add New Model</a>
    </div>
  </header> 

  <div class="row" style="display:flex; flex-wrap: wrap;">
    <% models.forEach(function(model) { %>
      <div class="col-sm-6 col-md-4">
        <div class="img-thumbnail" style="margin-bottom: 10px; text-align: center;">
          <img src="<%= model.image %>" class="img-fluid;" 
          style="max-width: 100%; height: auto;">
          <div class="caption" style="padding-top:10px;">
            <h4><%= model.title %></h4>
          </div>
          <p>
            <a href="/models/<%= model._id %>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<% include partials/footer.ejs %>